@model List<MvcShoes.Models.Product>

@{
    ViewData["Title"] = "Product Catalogue";
}

<h1>Product Catalogue</h1>

@if (Model.Count > 0)
{
    <div class="product-list">
        @foreach (var product in Model)
        {
            <div class="Product">
                <h2>@product.Name</h2>
                <p>@product.Description</p>
                <p>Price: @product.Price</p>
                <p>Customer Review: @product.CustomerReview</p> <!-- Change 'Rating' to 'CustomerReview' here -->
                <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 200px; max-height: 200px;" />
            </div>
        }
    </div>
}
else
{
    <p>No products available.</p>
}
